<script>
    $('#confirm-delete').on('show.bs.modal', function (e) {
        const id = $('#exampleModal').find('#id').val();
        //$(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href')+'/'+id);
        $(this).find('.btn-ok').click(function () {
            $.post('tables/delete/', { id }, function (result) {
                $(location).attr('href', result);
            })
        })
    });
</script>
<script>
    $('.page-item .page-link').click(function () {
        const keyWords = $('#search-bar').val();
        const keyWords_filter = $('#filter').val();
        if (keyWords == "" || keyWords_filter!="All") {
            const tag_a = this;
            const pagniation = Number(tag_a.id);
            const itemsPerPage = +$('#itemsPerPage').val();
            const offset = itemsPerPage * (pagniation - 1);
            $.post('tables/page/', { offset, itemsPerPage }, function (res) {
                $('#wrapper').html(res);
                $('#search-bar').val(keyWords);
                $('#' + tag_a.id).css('background', 'beige');
            });
        }
    });
</script>
<script>
    $('#search-bar').on('input', function () {
        const keyWords = $('#search-bar').val();
        const itemsPerPage = +$('#itemsPerPage').val();
        $.post('tables/search/', { itemsPerPage, keyWords }, function (res) {
            $('#wrapper').html(res);
            $('#search-bar').val(keyWords);
            $('#search-bar').focus();
        });

    });
</script>
<script>
    $('#filter').on('change', function () {
        const keyWords = $('#filter').val();
        const itemsPerPage = +$('#itemsPerPage').val();
        if (keyWords != "All") {
            $.post('tables/filter/', { itemsPerPage, keyWords }, function (res) {
                $('#wrapper').html(res);
                $('#filter').val(keyWords);
            });
        }
        else {
            $.get('tables/', function (res) {
                $('#wrapper').html(res);
            });
        }
    });
</script>